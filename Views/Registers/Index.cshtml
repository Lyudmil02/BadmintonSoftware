@model IEnumerable<BadmintonSoftware.Data.Register>

@{
    ViewData["Title"] = "Registers";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header text-white" style="background-color: #CA33FF;">
            <h2 class="text-center">Registers</h2>
        </div>
        <div class="card-body">
            <p class="text-right">
                <a asp-action="Create" class="btn btn-primary">Create New Register</a>
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Player</th>
                            <th>Competition</th>
                            <th>Register Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var register in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => register.Player.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => register.Competition.CompetitionName)</td>
                                <td>@Html.DisplayFor(modelItem => register.RegisterDate)</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@register.RegisterId" class="btn btn-info">Details</a>
                                    <a asp-action="Edit" asp-route-id="@register.RegisterId" class="btn btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@register.RegisterId" class="btn" style="background-color: transparent; color: #F53E49; border: 1px solid #F53E49; transition: background-color 1.3s;" ; onclick="return confirm('Are you sure you want to delete this register?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
