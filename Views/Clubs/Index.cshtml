@model IEnumerable<BadmintonSoftware.Data.Club>

@{
    ViewData["Title"] = "Clubs";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Clubs</h2>

    <p class="text-right">
        <a asp-action="Create" class="btn btn-primary">Create New Club</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Club Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var club in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => club.ClubName)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@club.ClubId" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@club.ClubId" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@club.ClubId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this club?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
